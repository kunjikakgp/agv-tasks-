import ai2thor.controller
import cv2
import numpy as np

def main():
    # Initialize AI2-THOR Controller
    controller = ai2thor.controller.Controller()

    # Start AI2-THOR environment
    controller.start()

    # Reset to a specific scene (e.g., FloorPlan1_physics)
    controller.reset('FloorPlan1_physics')

    # Capture an RGB frame from the agent's camera
    event = controller.step(action='MoveAhead')
    frame = event.frame  # RGB frame

    # Convert RGB frame to grayscale (example processing)
    gray_frame = cv2.cvtColor(frame, cv2.COLOR_RGB2GRAY)

    print("Frame captured and processed successfully.")

if __name__ == "__main__":
    main()
